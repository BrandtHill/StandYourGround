<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="create_run_jar" name="Create Runnable Jar for Project SYG with Jar-in-Jar Loader">
    <!--this file was created by Eclipse Runnable JAR file Export Wizard-->
    <!--ANT 1.7 is required-->
    <!--define folder properties-->
    <property name="dir.buildfile" value="."/>
    <property name="dir.workspace" value="${dir.buildfile}/.."/>
    <property name="dir.jarfile" value="C:/Users/Brandt/Desktop"/>
    <target name="create_run_jar">
        <jar destfile="${dir.jarfile}/SYG.jar" duplicate="preserve">
            <manifest>
                <attribute name="Main-Class" value="org.eclipse.jdt.internal.jarinjarloader.JarRsrcLoader"/>
                <attribute name="Rsrc-Main-Class" value="game.Program"/>
                <attribute name="Class-Path" value="."/>
                <attribute name="Rsrc-Class-Path" value="./ jinput.jar jogg-0.0.7.jar jorbis-0.0.15.jar lwjgl.jar slick.jar"/>
            </manifest>
            <zipfileset src="jar-in-jar-loader.zip"/>
            <fileset dir="${dir.buildfile}/bin"/>
            <fileset dir="${dir.buildfile}/res"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="jinput.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="jogg-0.0.7.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="jorbis-0.0.15.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="lwjgl.jar"/>
            <zipfileset dir="${dir.buildfile}/lib" includes="slick.jar"/>
        </jar>
    </target>
</project>
